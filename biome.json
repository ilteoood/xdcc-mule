{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"files": {
		"includes": ["packages/**/src/**/*.ts", "packages/**/src/**/*.tsx", "packages/**/src/**/*.css", "packages/**/test/**/*.ts", "packages/**/test/**/*.tsx"]
	},
	"assist": { "actions": { "source": { "organizeImports": "off" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
