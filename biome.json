{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"files": {
		"includes": ["packages/**/*.ts", "packages/**/*.tsx", "packages/**/*.css"]
	},
	"assist": { "actions": { "source": { "organizeImports": "off" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
